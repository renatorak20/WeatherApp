<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WeatherAppSofaScore" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/color_primary_dark</item>
        <item name="colorSecondary">@color/color_secondary_dark</item>
        <item name="on_color">@color/on_color_dark</item>
        <item name="neutrals_n_lv_1">@color/neutrals_n_lv_1_dark</item>
        <item name="neutrals_n_lv_2">@color/neutrals_n_lv_2_dark</item>
        <item name="neutrals_n_lv_3">@color/neutrals_n_lv_3_dark</item>
        <item name="surface_surface_0">@color/surface_surface_0_dark</item>
        <item name="surface_surface_1">@color/surface_surface_1_dark</item>
        <item name="surface_surface_2">@color/surface_surface_2_dark</item>
        <item name="status_success">@color/status_success</item>
        <item name="status_error">@color/status_error</item>
        <item name="elevation_elevation_1">@color/elevation_elevation_1_dark</item>
        <item name="elevation_elevation_2">@color/elevation_elevation_2_dark</item>
        <item name="overlay">@color/overlay_dark</item>
        <item name="surface_none">@color/surface_none_dark</item>

    </style>

    <style name="Theme.WeatherAppSofaScore" parent="Base.Theme.WeatherAppSofaScore" />


    <style name="Theme.WeatherAppSofaScore.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WeatherAppSofaScore.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="materialAlertDialogTitleTextStyle">@style/Dialog_Title</item>
        <item name="materialAlertDialogBodyTextStyle">@style/Dialog_Content</item>
    </style>

    <style name="Dialog_Title" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textAppearance">@style/HeadlineMediumNLv1Left</item>
    </style>

    <style name="Dialog_Content" parent="@style/TextAppearance.MaterialComponents.Body2">
        <item name="android:textAppearance">@style/BodyMediumNLv1Left</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/color_secondary</item>
        <item name="rippleColor">@color/color_primary_dark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


</resources>